{
  "dataRoles": [
    {
      "name": "facet",
      "kind": 0,
      "displayName": "Facet",
      "description": "Facet instances are grouped by this field."
    },
    {
      "name": "facetInstance",
      "kind": 0,
      "displayName": "Instance",
      "description": "Facet instance."
    },
    {
      "name": "count",
      "kind": 1,
      "displayName": "Count",
      "description": "Count of the facet instance.",
      "requiredTypes": [
        {
          "numeric": true
        },
        {
          "integer": true
        }
      ]
    },
    {
      "name": "rangeValue",
      "kind": 2,
      "displayName": "Range Value",
      "description": "Value to be used as horizontal axis of the histogram with the count as vertical axis.",
    },
    {
      "name": "bucket",
      "kind": 0,
      "displayName": "Segmented By",
      "description": "Each facet instance is segmented by this field.",
    },
    {
      "name": "facetInstanceColor",
      "kind": 0,
      "displayName": "Color",
      "description": "Color of each facet instance."
    },
    {
      "name": "iconClass",
      "kind": 0,
      "displayName": "Icon Class",
      "description": "CSS Class for each facet instance icon."
    }
  ],

  "dataViewMappings": [
    {
      "conditions": [
        {
          "facet": {
            "max": 1
          },
          "facetInstance": {
            "max": 1
          },
          "count": {
            "max": 1
          },
          "rangeValue": {
            "max": 5
          },
          "bucket": {
            "max": 1
          },
          "iconClass": {
            "max": 1
          },
          "facetInstanceColor": {
            "max": 1
          }
        }
      ],
      "categorical": {
        "categories": {
          "for": {
            "in": "facetInstance"
          },
          "dataReductionAlgorithm": {
            "window": {
              "count": 5000
            }
          }
        },
        "values": {
          "select": [
            {
              "bind": {
                "to": "facet"
              }
            },
            {
              "bind": {
                "to": "count"
              }
            },
            {
              "bind": {
                "to": "rangeValue"
              }
            },
            {
              "bind": {
                "to": "bucket"
              }
            },
            {
              "bind": {
                "to": "facetInstanceColor"
              }
            },
            {
              "bind": {
                "to": "iconClass"
              }
            }
          ]
        },
        "rowCount": {
          "preferred": {
            "min": 2
          },
          "supported": {
            "min": 0
          }
        }
      }
    }
  ],
  "sorting": {
    "custom": {},
    "implicit": {
      "clauses": [
        {
          "role": "count",
          "direction": 2
        }
      ]
    }
  },
  "objects": {
    "facetState": {
      "properties": {
        "rangeFacet": {
          "type": {
            "text": true
          }
        },
        "normalFacet": {
          "type": {
            "text": true
          }
        }
      }
    },
    "display": {
      "displayName": "Display",
      "description": "Facet display option",
      "properties": {
        "selectionCount": {
          "displayName": "Selection Count",
          "type": {
            "bool": true
          }
        }
      }
    },
    "facetCount": {
      "displayName": "Facet Count",
      "description": "Configure how many facets are loaded",
      "properties": {
        "initial": {
          "displayName": "Initial",
          "type": {
            "numeric": true
          }
        },
        "increment": {
          "displayName": "Increment",
          "type": {
            "numeric": true
          }
        }
      }
    }
  },
  "supportsHighlight": true
}
